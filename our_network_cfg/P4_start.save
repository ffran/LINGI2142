ldconfig

#!/bin/bash

ip link set dev P4-eth0 up
ip -6 addr add fde4:9:42::44/64 dev P4-eth0
ip link set dev P4-eth1 up            
ip -6 addr add fde4:9:46::44/64 dev P4-eth1
ip link set dev P4-eth2 up
ip -6 addr add fde4:9:48::44/64 dev P4-eth2
ip link set dev P4-eth3 up
ip -6 addr add fde4:9:410::44/64 dev P4-eth3

# zebra is required to make the link between all FRRouting daemons
# and the linux kernel routing table
LD_LIBRARY_PATH=/usr/local/lib /usr/lib/frr/zebra -A 127.0.0.1 -f /etc/zebra.conf -z /tmp/4api -i /tmp/p1_zebra.pid &
# launching FRRouting OSPF daemon
LD_LIBRARY_PATH=/usr/local/lib /usr/lib/frr/ospf6d -f /etc/p1_ospf.conf -z /tmp/p1.api -i /tmp/p1_ospf6d.pid -A 127.0.0.1

